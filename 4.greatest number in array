#include<stdio.h>
int main()
{
	int n,a[100],i,j,temp=0;
	printf("M.Gnaneshwarnath-192211148");
	printf("enter the size of array:");
	scanf("%d",&n);
	printf("enter the elements:");
	for (i=0;i<n;i++)
	{
		scanf("%d",&a[i]);
	}
	for(i=0;i<n;i++)
	{
		for(j=0;j<n;j++)
		{
			if(a[i]>a[j])
			{
				temp=a[i];
				a[i]=a[j];
				a[j]=temp;
			}
		}
	}
	for(i=0;i<n;i++)
	{
		printf("largest number in array:%d",a[0]);
		break;
	}

}
